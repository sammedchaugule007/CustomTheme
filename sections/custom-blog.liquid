{% assign blog = section.settings.custom-blog %}
{% unless blog.articles_count==0 %}
  {% for article  in blog.articles limit: section.settings.blog-range %}
    <div class="blog__posts articles-wrapper contains-card contains-card--article grid grid--peek grid--2-col-tablet grid--3-col-desktop slider slider--tablet " role="list">
      <a href="{{article.url}}">
        {{article.image.src | img_url: "500x" | img_tag}}
      </a>
      <a href="{{article.url}}">
        {{article.title}}
      </a>
    </div>
  {% endfor %}
{% endunless %}
{% schema  %}
  {
    "name": "customBlog",
    "settings": [
      {
        "id": "blog-range",
        "type": "range",
        "label": "No. of blogs to display",
        "min": 3,
        "max": 12,
        "step": 3,
        "default": 3
      }, {
        "id": "custom-blog",
        "type": "blog",
        "label": "Custom Blog"
      }
    ],
    "presets": [
      {
        "name": "customBlog",
        "category": "Custom Category"
      }
    ]
  }
{% endschema %} 