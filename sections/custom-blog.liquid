{% assign blog = section.settings.custom-blog %}
{% unless blog.articles_count==0 %}
  {% for article  in blog.articles limit: section.settings.blog-range %}
    {article.title}
  {% endfor %}
{% endunless %}
{% schema  %}
  {
    "name": "customBlog",
    "settings": [
      {
        "id": "blog-range",
        "type": "range",
        "label": "No. of blogs to display",
        "min": 3,
        "max": 12,
        "step": 3,
        "default": 3
      }, {
        "id": "custom-blog",
        "type": "blog",
        "label": "Custom Blog"
      }
    ],
    "presets": [
      {
        "name": "customBlog",
        "category": "Custom Category"
      }
    ]
  }
{% endschema %} 