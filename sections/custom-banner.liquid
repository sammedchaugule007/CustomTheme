<div class="banner">

      <div class="container">

        <div class="slider-container has-scrollbar">

          <div class="slider-item">

            <img src={{'banner-1.jpg' | asset_url}} alt="women's latest fashion sale" class="banner-img"> 
            <div class="banner-content">

              <p class="banner-subtitle">Trending item</p>

              <h2 class="banner-title">{{section.settings.itemName1}}</h2>

              <p class="banner-text">
                starting at &dollar; <b>{{section.settings.customBanner1}}</b>.00
              </p>

              <a href="#" class="banner-btn">Shop now</a>

            </div>

          </div>

          <div class="slider-item">

            <img src={{'banner-2.jpg' | asset_url}} alt="modern sunglasses" class="banner-img">

            <div class="banner-content">

              <p class="banner-subtitle">Trending accessories</p>

              <h2 class="banner-title">{{section.settings.itemName2}}</h2>

              <p class="banner-text">
                starting at &dollar; <b>{{section.settings.customBanner2}}</b>.00
              </p>

              <a href="#" class="banner-btn">Shop now</a>

            </div>

          </div>

          <div class="slider-item">

            <img src={{'banner-3.jpg' | asset_url}} alt="new fashion summer sale" class="banner-img">

            <div class="banner-content">

              <p class="banner-subtitle">Sale Offer</p>

              <h2 class="banner-title">{{section.settings.itemName3}}</h2>

              <p class="banner-text">
                starting at &dollar; <b>{{section.settings.customBanner3}}</b>.99
              </p>

              <a href="#" class="banner-btn">Shop now</a>

            </div>

          </div>

        </div>

      </div>

    </div>

{% schema %}
  {
    "name": "CustomBanner",
    "settings": [
      {
        "id":"itemName1",
        "type":"text",
        "label":"Title-1"
      },
      {
        "id":"customBanner1",
        "type":"number",
        "label":"Price"
      },
      {
        "id":"itemName2",
        "type":"text",
        "label":"Title-2"
      },
      {
        "id":"customBanner2",
        "type":"number",
        "label":"Price"
      },
      {
        "id":"itemName3",
        "type":"text",
        "label":"Title-3"
      },
      {
        "id":"customBanner3",
        "type":"number",
        "label":"Price"
      }
    ],
    "presets":[
        {
            "name":"CustomBanner",
            "category":"Custom Category"
        }
    ]
  }
{% endschema %}

{% stylesheet %}
    .banner { margin: 30px 0; }
{% endstylesheet %}

